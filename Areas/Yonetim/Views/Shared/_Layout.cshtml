                <ul class="nav">
                    <li class="nav-item"><a href="@Url.Action("Index", "Film")" class="nav-link text-dark">Filmler</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>

    @RenderSection("myScripts", false)
</body>
</html>
